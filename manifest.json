{
  "manifest_version": 2,

  "name": "Half Full Half Empty",
  "description": "This extension informs user on possible political bias in articles.",
  "version": "1.0",

  "background": {
  "persistent":false,
  "scripts":["background.js"]
  
  },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
  
}